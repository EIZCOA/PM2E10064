<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E10064.Vistas.SitiosPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ListaSitios" 
                      ItemTapped="ListaSitios_ItemTapped_1"
                      RowHeight="75">
                <ListView.ItemTemplate>
                    <DataTemplate>


                        <ImageCell  ImageSource="{Binding imagen, Converter={StaticResource ByteArrayToImage}}" Text="{Binding latitud} " Detail="{Binding descripcion}" 
                                  TextColor="#f35e20"
                                  DetailColor="#503026"/>


                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>